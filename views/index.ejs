<body>
    <h1>What to eat</h1>
    <h4>Add an item:</h4>

    <form action="/addItem" method="POST">
        <input type="text" placeholder="grocery item" name="itemName">
        <input type="submit">
    </form>

    <h2>What's in my fridge:</h2>
    <ul class="items">
    <% for(let i=0; i < info.length; i++) {%>
        <li class="item">
            <span><%= info[i].itemName %></span>
            <span class='fa fa-trash'>delete</span>
        </li>
    <% } %>
    </ul>

